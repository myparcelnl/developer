{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "ESNext",
    "noEmit": true,
    "paths": {
      // Vuepress default theme
      "@theme/*": [
        "node_modules/@vuepress/theme-default/lib/client/components/*"
      ],
      // Our custom theme
      "@mptheme/*": [
        "src/.vuepress/theme/*"
      ],
      "@Public/*": [
        "src/.vuepress/public/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "@vuepress/client",
      "vite/client",
      "vitest/globals"
    ]
  },
  "include": [
    "./*.cjs",
    "./*.js",
    "./*.mjs",
    "./*.ts",
    "./private/**/*",
    "./src/**/*",
    "./src/.vuepress/**/*",
    "./test/**/*",
    "./types/**/*"
  ],
  "exclude": [
    "**/.vuepress/.cache",
    "**/.vuepress/.temp",
    "**/.vuepress/dist",
    "**/node_modules"
  ]
}
